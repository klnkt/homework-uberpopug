<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>description</th>
      <th>assignee</th>
      <th>cost</th>
      <th>reward</th>
      <th>status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.assignee.full_name %></td>
        <td><%= task.cost %></td>
        <td><%= task.reward %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Complete', task_complete_path(task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

