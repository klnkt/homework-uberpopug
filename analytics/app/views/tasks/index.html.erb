<h1>Task List</h1>
 <%= button_to 'New Task', new_task_path, method: :get, class: 'btn btn-success' %>
 <br>
 <%= button_to 'Reassign all open tasks', reassign_all_tasks_path, method: :post, class: 'btn btn-success' %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Public ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Reward</th>
      <th>Assignee public ID</th>
      <th>Assignee</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="table-cell"><%= task.id %></td>
        <td class="table-cell"><%= task.public_id %></td>
        <td class="table-cell"><%= task.title %></td>
        <td class="table-cell"><%= task.description %></td>
        <td class="table-cell"><%= task.cost %></td>
        <td class="table-cell"><%= task.reward %></td>
        <td class="table-cell"><%= task.account.public_id %></td>
        <td class="table-cell"><%= task.account.full_name %></td>
        <td class="table-cell"><%= task.status %></td>
        <td class="table-cell">
             <% if task.status == 'New' %>
              <%= button_to 'Complete', complete_task_path(task), method: :patch, class: 'btn btn-success' %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
